#!/usr/bin/env bash
# This script configures /etc/hosts so that:
# - localhost resolves to 127.0.0.2
# - facebook.com resolves to 8.8.8.8

# Add or replace localhost entry
sudo sed -i '/[[:space:]]localhost$/d' /etc/hosts
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null

# Add or replace facebook.com entry
sudo sed -i '/[[:space:]]facebook.com$/d' /etc/hosts
echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts > /dev/null
